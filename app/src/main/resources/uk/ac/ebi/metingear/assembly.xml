<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>uber-jar</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <containerDescriptorHandlers>

        <containerDescriptorHandler>
            <handlerName>metaInf-services</handlerName>
        </containerDescriptorHandler>
        <containerDescriptorHandler>
            <handlerName>file-aggregator</handlerName>
            <configuration>
                <filePattern>uk/ac/ebi/caf/action/action.properties</filePattern>
                <outputPath>uk/ac/ebi/caf/action/action.properties</outputPath>
            </configuration>
        </containerDescriptorHandler>
        <containerDescriptorHandler>
            <handlerName>file-aggregator</handlerName>
            <configuration>
                <filePattern>uk/ac/ebi/metingear/dialog-config.yml</filePattern>
                <outputPath>uk/ac/ebi/metingear/dialog-config.yml</outputPath>
            </configuration>
        </containerDescriptorHandler>

    </containerDescriptorHandlers>

    <dependencySets>

        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
            <unpack>true</unpack>
            <scope>runtime</scope>
            <excludes>
                <exclude>ilog.cplex:cplex</exclude>
            </excludes>
        </dependencySet>

        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <unpack>true</unpack>
            <unpackOptions>
                <excludes>
                    <exclude>META-INF/NOTICE.txt</exclude>
                    <exclude>META-INF/LICENSE.txt</exclude>
                    <exclude>META-INF/NOTICE</exclude>
                    <exclude>META-INF/LICENSE</exclude>
                    <exclude>NOTICE</exclude>
                    <exclude>LICENSE</exclude>
                    <exclude>license</exclude>
                    <exclude>NOTICE.txt</exclude>
                    <exclude>LICENSE.txt</exclude>
                </excludes>
            </unpackOptions>
        </dependencySet>

    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>/</outputDirectory>
            <excludes>
                <exclude>LICENSE</exclude>
                <exclude>license/*</exclude>
                <exclude>NOTICE</exclude>
                <exclude>LICENSE.txt</exclude>
                <exclude>NOTICE.txt</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>
